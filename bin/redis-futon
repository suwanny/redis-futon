#!/usr/bin/env node

var path = require('path');
var fs   = require('fs');
var lib  = path.join(path.dirname(fs.realpathSync(__filename)), '../lib');

require(lib + '/lib/config');

var listen_port = parseInt(process.argv.splice(2)[0]) || 5985;
var redis_port  = parseInt(process.argv.splice(2)[1]) || 6379;

new FutonServer(redis_port)
         .start(listen_port);
